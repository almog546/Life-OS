generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  areas     Area[]
  focusSessions   Focus[]
  timeLogs  TimeLog[]
  
}
model Area {
  id        Int      @id @default(autoincrement())
  name      String
  userId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id])
  focusSessions Focus[]
  timeLogs TimeLog[]
  @@unique([id, userId])
}
model Focus {
  id        Int      @id @default(autoincrement())
  name     String
  userId    Int
  areaId    Int
  createdAt DateTime @default(now())
  timeLogs TimeLog[]

  user      User     @relation(fields: [userId], references: [id])
  area      Area     @relation(fields: [areaId], references: [id])
  @@unique([name, userId, areaId])

}
model TimeLog {
  id        Int      @id @default(autoincrement())
  focusId   Int?
  areaId    Int
  userId    Int
  duration  Int
  description       String?
  energyBefore Int?
  energyAfter  Int?
  attentionLevel Int?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  area      Area     @relation(fields: [areaId], references: [id])
  focus     Focus?    @relation(fields: [focusId], references: [id])
}